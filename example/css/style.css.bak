@font-face {
  font-family: 'DanaYadAlefAlefAlef-Normal';
  src: url('../fonts/DanaYadAlefAlefAlef-Normal.woff') format('woff'),
       url('../fonts/DanaYadAlefAlefAlef-Normal.otf') format('opentype'),
       url('../fonts/DanaYadAlefAlefAlef-Normal.eot');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
body {
  background: #faf7f6;
  font-family: 'DanaYadAlefAlefAlef-Normal', Arial, sans-serif;
  color: #444;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  justify-content: center;
}
.container {
  max-width: 350px;
  text-align: center;
  position: relative;
  overflow: hidden;
}
.balloon-img {
  width: 180px;
  margin-bottom: 24px;
  border-radius: 16px;
  box-shadow: 0 2px 12px rgba(200, 180, 200, 0.10);
}
h1 {
  font-size: 2em;
  margin: 0 0 12px 0;
  color: #b48cae;
  font-weight: normal;
  letter-spacing: 1px;
}
.intro {
  font-size: 1.1em;
  color: #6d6d6d;
  margin: 12px 0 18px 0;
  line-height: 1.7;
}
p {
  font-size: 1.1em;
  margin: 0 0 16px 0;
  color: #888;
}
.phone {
  font-size: 1.2em;
  color: #6d6d6d;
  background: #f3e9f6;
  border-radius: 8px;
  padding: 8px 0;
  margin-top: 8px;
  letter-spacing: 1px;
  direction: ltr;
  font-family: 'DanaYadAlefAlefAlef-Normal', Arial, sans-serif;
}
.products {
  margin: 40px auto 0 auto;
  max-width: 800px;
  display: flex;
  flex-direction: column;
  gap: 40px;
  align-items: center;
}
.product-section {
  background: #fff;
  border-radius: 20px;
  box-shadow: 0 2px 16px rgba(200, 180, 200, 0.10);
  padding: 24px 16px 20px 16px;
  width: 100%;
  max-width: 500px;
  text-align: center;
}
.product-section h2 {
  color: #b48cae;
  margin-bottom: 8px;
  font-size: 1.4em;
  font-weight: normal;
}
.product-section p {
  color: #888;
  margin-bottom: 18px;
  font-size: 1em;
}
.gallery {
  display: flex;
  justify-content: center;
  gap: 16px;
  flex-wrap: wrap;
}
.gallery img {
  width: 120px;
  height: 120px;
  object-fit: cover;
  border-radius: 14px;
  box-shadow: 0 1px 8px rgba(200, 180, 200, 0.10);
  background: #f3e9f6;
}
html {
  scroll-behavior: smooth;
}
.arrows-nav {
  display: flex;
  justify-content: center;
  gap: 24px;
  margin: 24px 0 0 0;
}
.arrow-label-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6px;
}
.arrow-label {
  font-size: 1em;
  color: #b48cae;
  margin-top: 2px;
  font-family: 'DanaYadAlefAlefAlef-Normal', Arial, sans-serif;
  letter-spacing: 1px;
  user-select: none;
}
.arrow-btn {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  transition: transform 0.2s;
}
.arrow-btn:active {
  transform: scale(0.92);
}
.arrow-btn svg {
  display: block;
} 